<% include ../partials/header %>

<div class="card">
  <div class="card-header">
    <h3>Add a comment</h3>
  </div>
  <div class="card-body">
    <form action="/blogs/<%= blog._id %>/comments" method="POST">
    
    <div class="form-group">
        <label for="text">Text</label>
        <textarea class="form-control" type="text" placeholder="Comment text" name="comment[title]" id="text"></textarea>
    </div> 
    
    <button class="btn btn-primary">Add a comment</button>
</form>
  </div>
</div>

