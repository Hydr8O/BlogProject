<% include ../partials/header %>

<div class="card mb-3">
  <div class="card-header">
    <h3>Login</h3>
  </div>
  <div class="card-body">
    <form class="register" action="/login" method="POST">
    <div class="form-group">
        <label for="username">Username</label>
        <input class="form-control" required type="text" placeholder="Username" name="username" id="username">
    </div>
    
    <div class="form-group">
        <label for="password">Password</label>
        <input class="form-control" required type="password" placeholder="Password" name="password" id="password">
    </div> 
    <div class="center">
      <button class="btn register">Login!</button>
    </div>
</form>
  </div>
</div>

<% include ../partials/footer %>