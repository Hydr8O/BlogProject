<% include ../partials/header %>
    <% blog.forEach(function(blog){%>
        <div class="card mb-4">   
            <div class="row no-gutters">
                <div class="col-md-6">                 
                     <img src="<%= blog.image %>" alt="...">
                </div>   
                <div class="col-md-6">
                    <div class="card-body">         
                        <h3 class="card-title"><%= blog.title %></h3>
                        <p class="card-text index"><%= blog.content.substring(0, 60) + "..." %></p>
                        <p class="card-text"><small class="text-muted"><%= blog.created.toDateString() %></small></p>
                        <a class="btn index"href="/blogs/<%= blog._id %>">Read More</a>                           
                    </div>
                </div>
            </div>  
        </div>
    <%});%>
<% include ../partials/footer %>
