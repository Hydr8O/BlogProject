<% include ../partials/header %>

<div class="card">
  <div class="card-header">
    <h3>New Post</h3>
  </div>
  <div class="card-body">
    <form action="/blogs" method="POST">
    <div class="form-group">
        <label for="title">Title</label>
        <input class="form-control" type="text" placeholder="Blog title" name="title" id="title">
    </div>
    
    <div class="form-group">
        <label for="image">Image</label>
        <input class="form-control" type="text" placeholder="Image" name="image" id="image">
    </div> 
    
    <div class="form-group">  
        <label for="content">Content</label> 
        <textarea class="form-control" placeholder="Blog content" name="content" id="content"></textarea>
    </div>
    <button class="btn btn-primary">Create</button>
</form>
  </div>
</div>

<% include ../partials/footer %>