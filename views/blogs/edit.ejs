<% include ../partials/header %>

<div class="card">
  <div class="card-header">
    <h3>Edit Post</h3>
  </div>
  <div class="card-body">
    <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
    <div class="form-group">
        <label for="title">Title</label>
        <input class="form-control" type="text" name="blog[title]" id="title" value="<%= blog.title %>">
    </div>
    
    <div class="form-group">
        <label for="image">Image</label>
        <input class="form-control" type="text" name="blog[image]" id="image" value="<%= blog.image %>">
    </div> 
    
    <div class="form-group">  
        <label for="content">Content</label> 
        <textarea class="form-control" name="blog[content]" id="content"><%= blog.content %></textarea>
    </div>
    <button class="btn btn-primary">Edit Post</button>
</form>
  </div>
</div>

<% include ../partials/footer %>